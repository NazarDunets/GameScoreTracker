<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultButton">
        <item name="android:background">@drawable/bg_default_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingStart">32dp</item>
    </style>

    <style name="SmallButton" parent="DefaultButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="RoundButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bg_round_button</item>
    </style>

    <style name="TeamNameText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="WinnerTeamText" parent="TeamNameText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoserTeamText">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TimePickerText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DefaultInputText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="DefaultActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>